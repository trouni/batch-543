<div class="container pt-5">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <div id="movies" class="mt-5">
        <% @movies.each do |movie| %>
          <h4><%= movie.searchable.title %></h4>
          <% if movie.searchable_type == "Movie" && movie.searchable.director %>
            <p><em><%= movie.searchable.director.first_name %> <%= movie.searchable.director.last_name %></em></p>
          <% end %>
          <p><%= movie.searchable.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
